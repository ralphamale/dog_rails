<%= simple_form_for @dog do |f| %>
  <%= f.input :name %>
  <%= f.input :description, as: :text %>
  <%= f.fields_for :images do |i| %>
  	<%= i.input :image, as: :file, input_html: { multiple: true } %>
  <% end %>


  <% if @dog.images.any? %>
  	<% @dog.images.each do |img_url| %>
  		<%= image_tag img_url %>
  	<% end %>
  <% end %>

  <br />
  <%= f.button :submit %>
<% end %>
